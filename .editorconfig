# http://editorconfig.org

root = true

[*]
end_of_line = lf
insert_final_newline = true
charset = utf-8
trim_trailing_whitespace = true

[*.go]
indent_style = tab

[*.{html}]
indent_style = space
indent_size = 4

[*.{js,jsx,json,yml,scss}]
indent_style = space
indent_size = 2

[Makefile]
indent_style = tab
